<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/child_post_author"
            android:text="Author"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
    />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/child_post_message"
            android:text="MessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessage"
            android:textSize="14dp"
            android:layout_toRightOf="@id/child_post_author"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
    />

    <View
            android:id="@+id/divider"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_alignParentBottom="true"
            />

</RelativeLayout>