<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="72dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thread_subject"
            android:text="Thread Subject"
            android:textSize="20dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            ></TextView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thread_author"
            android:text="Author"
            android:textSize="20dp"
            android:layout_below="@id/thread_subject"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            ></TextView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thread_post_number"
            android:text="# of Posts"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            ></TextView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thread_date"
            android:text="Date of Last Post"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_below="@id/thread_post_number"
            ></TextView>

    <View
            android:id="@+id/divider"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_alignParentBottom="true"
            ></View>

</RelativeLayout>